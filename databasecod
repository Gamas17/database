Table sexos {
    id INT [pk, increment] // Llave primaria con auto-incremento
    sexo VARCHAR(10) [not null, unique] // Sexo: 'masculino' o 'femenino'
}

Table profesion {
  id int [pk, increment]
  nombre varchar(100) [not null]
  profesion varchar(100) [not null]
}

Table pais {
  id int [pk, increment]
  pais varchar(100) [not null]
}

Table numero {
  id int [pk, increment]
  numerotel varchar(50) [not null]
}

Table nit {
  id int [pk, increment]
  nit int(50) [not null]
}

Table direccion {
  id int [pk, increment]
  dir varchar(50) [not null]
}

Table usuarios {
    id INT [pk, increment] // Llave primaria con auto-incremento
    nombre VARCHAR(100) [not null]
    numero int(50) [not null, unique]
    profesion varchar [not null]
    Pais varchar(100) [not null]
    Direccion varchar(50) [not null]
    email VARCHAR(100) [unique, not null]
    nit int(50) [not null]
    contraseña VARCHAR(255) [not null]
    tipo_usuario VARCHAR(20) [not null] // 'cliente' o 'administrador'
    sexo_id varchar(10) [not null] // Referencia a la tabla de sexos
    fecha_registro TIMESTAMP [default: `current_timestamp`]
    ultima_sesion TIMESTAMP // Última sesión del usuario
}

Table programas {
    id INT [pk, increment] // Llave primaria con auto-incremento
    nombre VARCHAR(100) [not null]
    descripcion TEXT [not null]
}

Table donaciones {
    id INT [pk, increment] // Llave primaria con auto-incremento
    usuario_id INT [not null] // Referencia a la tabla de usuarios
    programa_id INT [not null] // Referencia a la tabla de programas
    monto DECIMAL(10, 2) [not null]
    fecha_donacion TIMESTAMP [default: `current_timestamp`]
}

Table detalle_donaciones {
    id INT [pk, increment] // Llave primaria con auto-incremento
    donacion_id INT [not null] // Referencia a la tabla de donaciones
    tipo_servicio VARCHAR(20) [not null] // Tipo de servicio de la donación
    categoria ENUM('Salud', 'Dental', 'Psicologica', 'Infantil', 'Alimentacion', 'Educacion', 'Oficios Tecnicos', 'Educacion Financiera', 'Juridica') [not null] // Categoría de la donación
    comentario TEXT // Comentarios adicionales sobre la donación
    cantidad INT // Cantidad de elementos donados
    descripcion_adicional TEXT // Información adicional específica de la donación
    fecha_detalle TIMESTAMP [default: `current_timestamp`] // Fecha del detalle de la donación
}

Table tokens_acceso {
    id INT [pk, increment] // Llave primaria con auto-incremento
    usuario_id INT [not null] // Referencia a la tabla de usuarios
    token VARCHAR(500) [not null]
    fecha_emision TIMESTAMP [default: `current_timestamp`]
    fecha_expiracion TIMESTAMP [not null]
    estado ENUM('activo', 'revocado') [default: 'activo']
}

Table tokens_actualizacion {
    id INT [pk, increment] // Llave primaria con auto-incremento
    usuario_id INT [not null] // Referencia a la tabla de usuarios
    token VARCHAR(500) [not null]
    fecha_emision TIMESTAMP [default: `current_timestamp`]
    fecha_expiracion TIMESTAMP [not null]
    estado ENUM('activo', 'revocado') [default: 'activo']
}

// Definición de referencias
Ref: usuarios.Direccion > direccion.id
Ref: usuarios.nit > nit.id
Ref: usuarios.numero > numero.numerotel
Ref: usuarios.Pais > pais.id
Ref: usuarios.profesion > profesion.id
Ref: usuarios.sexo_id > sexos.id
Ref: donaciones.usuario_id > usuarios.id
Ref: donaciones.programa_id > programas.id
Ref: detalle_donaciones.donacion_id > donaciones.id
Ref: tokens_acceso.usuario_id > usuarios.id
Ref: tokens_actualizacion.usuario_id > usuarios.id
